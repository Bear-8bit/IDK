
@using DigitalStore.Common
@{
    ViewBag.Title = "Giỏ hàng";
}

<link href="~/Content/assets/styles/categories_responsive.css" rel="stylesheet" />
<link href="~/Content/assets/styles/categories_styles.css" rel="stylesheet" />

<!-- Slider -->

<div class="container product_section_container">
    <div class="row" style="top: -40px;">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/Home/Index">Trang chủ</a></li>
                    <li class="active">
                        <a href="#"><i class='bx bx-right-arrow'></i>@ViewBag.Title</a>
                    </li>
                </ul>
            </div>


            <!-- Main Content -->

                <!-- Products -->
                <div class="row">
                    <div class="col-md-12" id="load_data">

                        <!-- Products -->
                        @Html.Action("Partical_Item_Cart", "ShoppingCart")

                    </div>
                    <div class="col-md-12">
                        @if (ViewBag.CheckCart != null)
                        {
                            <div class="text-right">
                                <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
                                <a href="/thanh-toan" class="btn btn-success">Thanh toán</a>
                            </div>
                        }

                    </div>
                </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>

}


