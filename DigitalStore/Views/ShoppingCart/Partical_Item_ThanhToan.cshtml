@model IEnumerable<DigitalStore.Models.ShoppingCartItem>
@using DigitalStore.Common

@if (Model != null && Model.Any())
{
    <h3>Giỏ hàng <span style="float: right; position: relative;"><small>@Model.Count()</small></span></h3>
    var i = 0;
    var tongtien = decimal.Zero;
    <div style="border: 1px solid #808080 " class="rounded-3">
        <table class="table">
            @foreach (var item in Model)
            {
                tongtien += item.TotalPrice;
                <tr>
                    <td>@item.ProductName</td>
                    <td>@Common.FormatNumber(item.Price, 0) đ</td>
                    
                </tr>
            }
            <tr>
                <th>Tổng tiền</th>
                <th>@Common.FormatNumber(tongtien, 0) đ</th>
            </tr>
        </table>
    </div>

}

else
{

}

