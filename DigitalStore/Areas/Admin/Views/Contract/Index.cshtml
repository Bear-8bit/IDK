@model PagedList.PagedList<DigitalStore.Models.EF.Contract>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách Hợp đồng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Game" class="nav-link">Quản lý Hợp đồng</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="/code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css" />
@section body{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý Hợp đồng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Hợp đồng</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách Hợp đồng</h3>

                <div class="card-tools">
                    <a href="/Admin/Contract/Add" class="btn btn-primary">Thêm mới</a>
                    <a href="#" class="btn btn-danger" id="btnDeleteAll">Xóa</a>
                </div>
            </div>


            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        @using (Html.BeginForm("index", "Contract", FormMethod.Get, new { }))
                        {

                            <div class="input-group input-group-sm">
                                @Html.TextBox("SearchText")
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                                </span>
                            </div>
                        }
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="SelectAll" /></th>
                            <th>STT</th>
                            <th>Tên</th>
                            <th>Loại hợp đồng</th>
                            <th>Giá trị</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Any())
                        {
                            var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1; ;
                            foreach (var item in Model)
                            {
                                if (item.NameSideB == User.Identity.Name && User.IsInRole("Marketing Partner"))
                                {
                                    <tr id="trow_@item.Id">
                                        <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.ContractCategories.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.CreatedDate</td>
                                        <td class="text-center">
                                            <a href="/Admin/Contract/Edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                                if (item.NameSideB == User.Identity.Name && User.IsInRole("Publisher"))
                                {
                                    <tr id="trow_@item.Id">
                                        <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.ContractCategories.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.CreatedDate</td>
                                        <td class="text-center">
                                            <a href="/Admin/Contract/Edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                                if (User.IsInRole("Admin"))
                                {
                                    <tr id="trow_@item.Id">
                                        <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.ContractCategories.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.CreatedDate</td>
                                        <td class="text-center">
                                            <a href="/Admin/Contract/Edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Không có bản ghi nào</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6" style="">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>


            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
    <div id="dialog">
        <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
    </div>
}
@section scripts
{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
            $(document).ready(function () {

               


                $('body').on('click', '#btnDeleteAll', function (e) {
                    e.preventDefault();
                    var str = "";
                    var checkbox = $(this).parents('.card').find('tr td input: checkbox');
                    var i = 0;
                    checkbox.each(function () {
                        if (this.checked) {
                            check.attr('selected', 'checked');
                            var _id = $(this).val();
                            if (i === 0) {
                                str += _id;
                            }
                            else {
                                str += "," + _id;
                            }
                            i++;
                        }
                        else {
                            checkbox.attr('selected', '');
                        }
                    });
                    if (str.length > 0) {
                        var conf = confirm('Xóa ?');
                        if (conf === true) {
                            $.ajax({
                                url: '/Admin/Contract/DeleteAll',
                                type: 'POST',
                                data: { ids: str },
                                success: function (rs) {
                                    if (rs.success) {
                                        location.reload();
                                    }
                                }
                            });
                        }
                    }
                });

                $('body').on('change', "#SelectAll", function () {
                    var checkStatus = this.checked;
                    var checkbox = $(this).parents('.card-body').find('tr td input: checkbox');
                    checkbox.each(function () {
                        this.checked = checkStatus;
                        if (this.checked) {
                            checkbox.attr('selected', 'checked');
                        }
                        else {
                            checkbox.attr('selected', '')
                        }
                    });
                });


                $('body').on('click', '.btnDelete', function () {
                    var id = $(this).data("id");
                    var conf = confirm("Bạn có muốn xóa danh mục này không ?");
                    if (conf == true) {
                        $.ajax({
                            url: '/Admin/Contract/Delete',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove();
                                }
                            }
                        });
                    }
                });
            });

    </script>
}

